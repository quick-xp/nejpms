<h1>出庫マスタ</h1>
<h3> station : <%=@station_name%></h3>

<%= link_to '出庫登録', new_delivery_path %>
<%= link_to '在庫マスタ', asset_list_masters_path %>
</br>
</br>
<table id="delivery-list-master-table">
  <thead>
    <tr>
      <th>出庫日</th>
      <th>出庫日(JP)</th>
      <th>アイテム名</th>
      <th>数量</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  </tbody>
  <% @deliveries.each do |delivery| %>
    <tr>
    <td><%= delivery.add_date.strftime("%Y/%m/%d %H:%M:%S") %></td>
    <td><%= (delivery.add_date + 9.hours).strftime("%Y/%m/%d %H:%M:%S") %></td>
    <td><%= delivery.try(:item).try(:type_name) %></td>
    <td><%= delivery.quantity %></td>
    <td><%= link_to 'Show', delivery %></td>
    <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
    <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

